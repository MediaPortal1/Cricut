<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/registration_page"
    >
    <fragment
        android:id="@+id/registration_page"
        android:label="RegistrationPage"
        android:name="com.cricut.test.presentation.fragment.RegistrationFragment"
        tools:layout="@layout/fragment_registration"
        >
        <action
            android:id="@+id/already_registered_action"
            app:destination="@id/login_page"
            app:popUpTo="@id/registration_page"
            />
        <action
            android:id="@+id/registration_to_blank_action"
            app:destination="@id/blank_page"
            app:launchSingleTop="true"
            />
    </fragment>
    <fragment
        android:id="@+id/login_page"
        android:label="LoginPage"
        android:name="com.cricut.test.presentation.fragment.LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/login_to_blank_action"
            app:destination="@id/blank_page"
            app:launchSingleTop="true"
            />
    </fragment>
    <fragment
        android:id="@+id/blank_page"
        android:label="BlankPage"
        android:name="com.cricut.test.presentation.fragment.BlankFragment"
        tools:layout="@layout/fragment_blank"
        >

    </fragment>

</navigation>